{% extends "gryphon/base.tpl" %}
{% block title %}:: Get Connected{% endblock %}


{% block active %}{% endblock %}
{% block subActive %}{% endblock %}

{% block content %}

	<div class="grid_8">
	
		<h1>Get connected with The State News</h1>
	
		<hr class="spacer" />
	
		<div class="grid_3 alpha">
			<img src="{{ 'style/images/facebook_200.gif'|url }}" alt="State News Mobile" />
		</div>
		<div class="grid_5 omega">
			<h3>Facebook</h3>
		
			<p>
				Stay up-to-date with breaking news, comment on and share stories and blog posts and connect with other State News readers on our <a href="http://www.facebook.com/pages/The-State-News/62758758853">Facebook page</a>.
			</p>
		</div>
	
		<hr />
	
		<div class="grid_3 alpha">
			<img src="{{ 'style/images/twitter_200.gif'|url }}" alt="State News Mobile" />
		</div>
		<div class="grid_5 omega">
			<h3>Twitter</h3>
		
			<p>
				Follow and interact with us on <a href="http://twitter.com/thesnews">Twitter</a> for breaking news, fresh multimedia and upcoming events.
			</p>
		</div>
	
		<hr />
	
		<div class="grid_3 alpha">
			<img src="{{ 'style/images/mobile_200.gif'|url }}" alt="State News Mobile" />
		</div>
		<div class="grid_5 omega">
			<h3>State News Mobile</h3>
		
			<p>
				The State News mobile edition is available on any internet capable cell phone or mobile device. Simply visit <a href="http://statenews.com">statenews.com</a> on your phone to see the mobile enhanced version, no downloads required.
			</p>
		</div>
	
		<hr />
	
		<div class="grid_3 alpha">
			<img src="{{ 'style/images/mail_200.gif'|url }}" alt="State News Mobile" />
		</div>
		<div class="grid_5 omega">
			<h3>Email Newsletter</h3>
		
			<p>
				Stay informed with top stories delivered daily to your inbox with our <a href="http://feedburner.google.com/fb/a/mailverify?uri=statenews/top" onclick="window.open('http://feedburner.google.com/fb/a/mailverify?uri=statenews/top', 'popupwindow', 'scrollbars=yes,width=550,height=520');return false">email newsletter</a>.
			</p>
		</div>
	
	</div>
	
	<div class="grid_4">
	
		{% include 'gryphon/main/sidebar-short.tpl' %}
	
	</div>
	
	<hr class="spacer" />
{% endblock %}